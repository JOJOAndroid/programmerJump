<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment"
    >

    <TextView
        android:id="@+id/encourage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/encourage"
        android:textColor="@color/black"
        android:textSize="24dp"
        android:gravity="center"
        android:background="@drawable/drawable_blue"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageView
        android:id="@+id/icon"
        android:layout_width="84dp"
        android:layout_height="84dp"
        app:layout_constraintTop_toBottomOf="@id/encourage"
        app:layout_constraintStart_toStartOf="parent"
        android:background="#3c3c3c"
        />
    <TextView
        android:id="@+id/name"
        style="@style/MTextItem"
        app:layout_constraintTop_toBottomOf="@id/icon"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <TextView
        android:id="@+id/readtime"
        style="@style/MTextItem"
        app:layout_constraintTop_toBottomOf="@id/name"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <TextView
        android:id="@+id/sporttime"
        style="@style/MTextItem"
        app:layout_constraintTop_toBottomOf="@id/readtime"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <TextView
        android:id="@+id/learntime"
        style="@style/MTextItem"
        app:layout_constraintTop_toBottomOf="@id/sporttime"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <TextView
        android:id="@+id/totletime"
        style="@style/MTextItem"
        app:layout_constraintTop_toBottomOf="@id/learntime"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <TextView
        android:id="@+id/expendtime"
        style="@style/MTextItem"
        app:layout_constraintTop_toBottomOf="@id/totletime"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <TextView
        android:id="@+id/treasure"
        style="@style/MTextItem"
        app:layout_constraintTop_toBottomOf="@id/expendtime"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <TextView
        android:id="@+id/php_consumpotion"
        style="@style/MTextItem"
        app:layout_constraintTop_toBottomOf="@id/treasure"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <Button
        android:id="@+id/add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="添加"
        android:textSize="24dp"
        app:layout_constraintTop_toBottomOf="@id/php_consumpotion"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>